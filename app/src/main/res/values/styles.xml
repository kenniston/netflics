<resources>

    <!--
        O arquivo styles.xml deve conter apenas definições para componentes (widgets)
        somente. Nenhum atributo de texto deve ser incluido nesse arquivo.
    -->

    <style name="Widget.MaterialComponents.Button.OutlinedButton.PrimaryButton">
        <item name="cornerRadius">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.SecondaryButton">
        <item name="cornerRadius">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.ViewPageIndicator" parent="android:Widget">
        <item name="dotsColor">?attr/colorSecondary</item>
        <item name="dotsStrokeColor">?attr/colorSecondaryVariant</item>
        <item name="dotsStrokeWidth">2dp</item>
        <item name="dotsCornerRadius">8dp</item>
        <item name="dotsSize">8dp</item>
        <item name="dotsSpacing">4dp</item>
    </style>

    <style name="Widget.BottomNavigation" parent="android:Widget">
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <style name="Widget.AnimatedProfile" parent="android:Widget">
        <item name="profileBorderColor">?attr/colorPrimary</item>
        <item name="profileBorderWidth">8</item>
        <item name="profileCounterColor">?attr/colorSecondaryVariant</item>
        <item name="profileCounterStrokeColor">?attr/colorSecondary</item>
        <item name="profileCounterTextColor">?attr/colorOnPrimary</item>
        <item name="profileCounterStrokeWidth">1.2</item>
        <item name="profileNameColor">?attr/colorOnPrimary</item>
        <item name="profileStartColor">?attr/colorPrimaryVariant</item>
        <item name="profileCenterColor">?attr/colorPrimary</item>
        <item name="profileEndColor">?attr/colorPrimaryVariant</item>
        <item name="profilePlaceholder">@drawable/ic_account</item>
        <item name="profileNameTextSize">32</item>
        <item name="profileEditIcon">@drawable/ic_edit</item>
        <item name="profileEditIconTint">?attr/colorSecondary</item>
    </style>

    <style name="Widget.EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="passwordToggleTint">?attr/colorOnPrimary</item>
        <item name="errorTextColor">?attr/colorSecondary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
        <item name="placeholderTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.EditText" parent="">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Body1" parent="android:Widget">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.Body2" parent="android:Widget">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.SubTitle1" parent="android:Widget">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="Widget.Title" parent="android:Widget">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline1</item>
    </style>

</resources>